<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="tadsceno01a.g4.com.quizgame.RankingFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="left|top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_ranking"
            android:contentDescription="Lista dos usuários"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lista do usuários por nota"
            android:id="@+id/textView"
            android:paddingTop="10dp"
            android:textColor="@android:color/holo_red_dark"
            />

    </LinearLayout>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="tadsceno01a.g4.com.quizgame.RankingListFragment"
            android:id="@+id/fragment"
            android:layout_gravity="left|top">
    </fragment>

    </LinearLayout>
</FrameLayout>

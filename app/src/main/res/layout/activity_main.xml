<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:context=".MainActivity"
                android:background="@android:color/black"
                android:orientation="vertical"
                android:layout_gravity="center"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/icoanhembi"
            android:contentDescription="Logo Anhembi"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Student Quiz Game"
                android:id="@+id/textView"
                android:textColor="@android:color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="TADSCENO01A"
                android:id="@+id/textView2"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nome:"
                android:id="@+id/lblNome"
                android:layout_column="6"
                android:textColor="@android:color/white"/>

            <AutoCompleteTextView
                android:id="@+id/txtNome"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:hint="Username"
                android:inputType="textAutoComplete|textAutoCorrect" >
            </AutoCompleteTextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Senha"
                android:id="@+id/lblPassword"
                android:layout_column="6"
                android:textColor="@android:color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="#FFFFFF"
                android:ems="10"
                android:id="@+id/txtPassword"
                android:layout_column="7"
                android:linksClickable="false"
                android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluno"
                android:id="@+id/rdbStudent"
                android:layout_column="7"
                android:textColor="@android:color/white"
                android:checked="true"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor"
                android:id="@+id/rdbTeacher"
                android:layout_column="7"
                android:textColor="@android:color/white"/>
        </TableRow>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:gravity="center" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/btnLogin"
                android:layout_gravity="center"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/btnCancelar"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:gravity="center"
                      android:layout_height="35dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="160sp"
                android:layout_height="40sp"
                android:text="Registrar"
                android:id="@+id/btnRegistrar"/>

        </LinearLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </TableRow>


    </TableLayout>


</RelativeLayout>
